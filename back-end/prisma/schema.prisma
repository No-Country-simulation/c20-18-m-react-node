generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definición de modelos

model Usuario {
  id          Int          @id @default(autoincrement())
  nombre      String
  apellido    String
  email       String       @unique
  password    String
  // Relación uno a muchos
  estudiantes Estudiante[]
  padres      Padre[]
  profesores  Profesor[]
  role        RolesUsuario  @default(Usuario)
}

enum RolesUsuario {
  Usuario
  Admin
  Estudiante
  Padre
  Profesor
}

model Estudiante {
  id                 Int                    @id @default(autoincrement())
  birthDate          DateTime?
  usuarioId          Int
  usuario            Usuario              @relation(fields: [usuarioId], references: [id])
  InformeRendimiento InformeRendimiento[]
  asignaturas        Asignatura[]         @relation("EstudianteAsignaturas")
  notas              Nota[]               @relation("NotasEstudiante")
}

model Padre {
  id        Int      @id @default(autoincrement())
  usuarioId Int
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}

model Profesor {
  id                 Int                  @id @default(autoincrement())
  usuarioId          Int
  usuario            Usuario             @relation(fields: [usuarioId], references: [id])
  asignaturas        Asignatura[]        @relation("ProfesorAsignaturas")
  InformeRendimiento InformeRendimiento[]
  evaluaciones       Evaluacion[]
}

model Evaluacion {
  id              Int            @id @default(autoincrement())
  profesorId      Int
  profesor        Profesor       @relation(fields: [profesorId], references: [id])
  asignaturaId    Int
  asignatura      Asignatura     @relation(fields: [asignaturaId], references: [id], name: "AsignaturaEvaluacion")
  notas           Nota[]
}

model Nota {
  id              Int            @id @default(autoincrement())
  evaluacionId    Int
  evaluacion      Evaluacion     @relation(fields: [evaluacionId], references: [id])
  estudianteId    Int            
  estudiante      Estudiante     @relation(fields: [estudianteId], references: [id], name: "NotasEstudiante")
  nota            Int
}

model InformeRendimiento {
  id           Int         @id @default(autoincrement())
  estudianteId Int?
  estudiante   Estudiante? @relation(fields: [estudianteId], references: [id])
  profesorId   Int?
  profesor     Profesor?   @relation(fields: [profesorId], references: [id])
  // Aquí puedes agregar más campos relacionados
}

model Asignatura {
  id                   Int                    @id @default(autoincrement())
  nombre               String
  profesores           Profesor[]             @relation("ProfesorAsignaturas")
  estudiantes          Estudiante[]           @relation("EstudianteAsignaturas")
  evaluaciones         Evaluacion[]           @relation("AsignaturaEvaluacion")
}
